# Server Configuration
NODE_ENV=development
PORT=3000
BASE_URL=/ims/oneroster/gradebook/v1p2

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gradebook
DB_USER=postgres
DB_PASSWORD=your_password
DB_DIALECT=postgres
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# OAuth 2.0 Server Configuration (Provider)
OAUTH_ACCESS_TOKEN_LIFETIME=3600
OAUTH_REFRESH_TOKEN_LIFETIME=86400
OAUTH_CLIENT_ID=demo_client_id
OAUTH_CLIENT_SECRET=demo_client_secret

# OAuth 2.0 Client Configuration (Consumer)
OAUTH_TOKEN_URL=https://provider.example.com/oauth/token
PROVIDER_BASE_URL=https://provider.example.com/ims/oneroster/gradebook/v1p2

# Rostering Service Configuration
ROSTERING_BASE_URL=https://rostering.example.com/ims/oneroster/rostering/v1p2
ROSTERING_OAUTH_TOKEN_URL=https://rostering.example.com/oauth/token
ROSTERING_CLIENT_ID=rostering_client_id
ROSTERING_CLIENT_SECRET=rostering_client_secret

# Security
JWT_SECRET=your_jwt_secret_key_change_this_in_production
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
